# ================================================
# GesturaApp - Environment Variables Example
# ================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to git repository!

# ================================================
# Database Configuration (MySQL)
# ================================================
# MySQL database connection settings
DB_HOST=127.0.0.1
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password
DB_NAME=login_app
DB_PORT=3306

# ================================================
# Google Services Configuration
# ================================================
# Google OAuth 2.0 credentials
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Cloud Speech-to-Text API
# Place your service account JSON file in: credentials/google-cloud-speech.json
# Or set custom path here:
GOOGLE_APPLICATION_CREDENTIALS=credentials/google-cloud-speech.json

# Google Gemini AI API Key
# Get from: https://ai.google.dev/
GOOGLE_GEMINI_API_KEY=your_gemini_api_key

# ================================================
# Social Media OAuth (Optional)
# ================================================
# Facebook OAuth credentials
# Get these from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ================================================
# Email Configuration
# ================================================
# SMTP email settings for sending emails
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
# Note: For Gmail, use App Password instead of regular password
# How to create App Password: https://support.google.com/accounts/answer/185833

# ================================================
# Security Configuration
# ================================================
# Flask secret key for session management
# Generate a new one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_use_a_long_random_string

# ================================================
# External APIs
# ================================================
# OpenAI API Key (for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Stripe API Keys (for payment processing)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PRODUCT_ID=prod_your_stripe_product_id

# ================================================
# Application Settings
# ================================================
# Development/Production mode
FLASK_ENV=development
DEBUG=True

# Application URL (for OAuth redirects)
APP_URL=http://localhost:5000

# ================================================
# Audio/Video Configuration
# ================================================
# Audio device settings (optional)
AUDIO_DEVICE_INDEX=0
SAMPLE_RATE=16000

# Camera settings (optional)
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# ================================================
# Model Configuration
# ================================================
# Model file paths (if different from default)
# GESTURE_MODEL_PATH=RedesNeuronales/your_model.keras
# SCALER_PATH=RedesNeuronales/your_scaler.skl

# ================================================
# Logging Configuration
# ================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/gesturaapp.log